@model TripRoutingApp.Models.SearchModel

<!DOCTYPE html>

<h3>Enter Trip Information Below: </h3>
<html>
<head>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAlrgDQgcbdPAy5gVha7BRP9HOeJWdStxI&libraries=places">
    </script>
    <style>
        body { background-image: url("images/HomePageBackground.jpg");
               background-size: cover;
               background-repeat: no-repeat;
               height: 100%;
               
             }
        html {height: 100%;}

        input[type=text]
        {
            width: 350px;
        }
    </style>
</head>
    <body>
        <form asp-controller="Results" asp-action="SearchResults">
            Starting Point:
            <br>
            <input type="text" name="startingPoint" id="start" asp-for="startingPoint"/>
            <br>
            Destination:
            <br>
            <input type="text" name="destination" id="dest" asp-for="destination"/>
            <br>
            <br>
            <input type="submit">
            <br>
        </form>

        <script>
            function initStart() {
                var input = document.getElementById('start');
                var autocomplete = new google.maps.places.Autocomplete(input);
            }
            google.maps.event.addDomListener(window, 'load', initStart);

             function initDestination() {
                var input = document.getElementById('dest');
                var autocomplete = new google.maps.places.Autocomplete(input);
            }

            google.maps.event.addDomListener(window, 'load', initDestination);

        </script>

    </body>
</html>
